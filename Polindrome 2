using System;
using System.Xml.Schema;

namespace Polindrom_of_Numbers
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите четырёхзначное число:");
            var addNumb = Console.ReadLine();
            if (addNumb.Length == 4 && addNumb[0] == addNumb[3])
            {
                Console.WriteLine("Числа полиндромны");
            }
            else
            {
                Console.WriteLine("Числа не полиндромны");
            }
        }
    }
}
