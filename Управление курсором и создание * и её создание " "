using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Threading;
using ConsoleApp1;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int xCoord = 0;
            int yCoord = 0;
            int[] stars = new int[100];
            for (int i = 0; i >= 0; i++)
            {
                var nextChar = Console.ReadKey(true);
                switch (nextChar.Key)
                {
                    case ConsoleKey.UpArrow:
                        if (yCoord > 0)
                        {
                            Console.SetCursorPosition(xCoord, --yCoord);
                        }
                        break;

                    case ConsoleKey.LeftArrow:
                        if (xCoord > 0)
                        {
                            Console.SetCursorPosition(--xCoord, yCoord);
                        }
                        break;

                    case ConsoleKey.DownArrow:
                        if(yCoord <= 8)
                        {
                            Console.SetCursorPosition(xCoord, ++yCoord);
                        }
                        break;

                    case ConsoleKey.RightArrow:
                        if(xCoord <= 8)
                        {
                            Console.SetCursorPosition(++xCoord, yCoord);
                        }
                        break;

                    case ConsoleKey.Spacebar:
                        for(int j = 0; j <= stars.Length - 1; j++)
                        {
                            if( stars[10*xCoord + yCoord] == 0 )
                            {
                                Console.Write("*");
                                xCoord++;
                                Console.SetCursorPosition(--xCoord, yCoord);
                                stars[10 * xCoord + yCoord] = 1;
                                break;
                            }
                            else
                            {
                                Console.Write(" ");
                                xCoord++;
                                Console.SetCursorPosition(--xCoord, yCoord);
                                stars[10 * xCoord + yCoord] = 0;
                                break;
                            }

                        }
                        break;
                }
            }
        }
    }
}
