using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Threading;
using ConsoleApp1;

namespace ConsoleApp1
{
    class Program
    {
        static int xCoord = 0;
        static int yCoord = 0;
        static int[] stars = new int[100];
        static void MoveCursorDown()
        {
            Console.SetCursorPosition(xCoord, ++yCoord);
        }
        static void MoveCursorUp()
        {
            Console.SetCursorPosition(xCoord, --yCoord);
        }
        static void MoveCursorRight()
        {
            Console.SetCursorPosition(++xCoord, yCoord);
        }
        static void MoveCursorLeft()
        {
            Console.SetCursorPosition(--xCoord, yCoord);
        }
        static void ToggleStar()
        {
            for (int j = 0; j <= stars.Length - 1; j++)
            {
                if (IsStarDysplayed(xCoord,yCoord))
                {
                    Console.Write("*");
                    xCoord++;
                    Console.SetCursorPosition(--xCoord, yCoord);
                    stars[10 * xCoord + yCoord] = 1;
                    break;
                }
                else
                {
                    Console.Write(" ");
                    xCoord++;
                    Console.SetCursorPosition(--xCoord, yCoord);
                    stars[10 * xCoord + yCoord] = 0;
                    break;
                }
            }
        }
        static bool IsStarDysplayed(int xCoord, int yCoord)
        {
            if(stars[10 * xCoord + yCoord] == 0)
            {
                return true;
            }
            else
            {
                return false;
            }
        }
        static void Main(string[] args)
        {
            for (int i = 0; i >= 0; i++)
            {
                var nextChar = Console.ReadKey(true);
                switch (nextChar.Key)
                {
                    case ConsoleKey.UpArrow:
                        if (yCoord > 0)
                        {
                            MoveCursorUp();
                        }
                        break;

                    case ConsoleKey.LeftArrow:
                        if (xCoord > 0)
                        {
                            MoveCursorLeft();
                        }
                        break;

                    case ConsoleKey.DownArrow:
                        if (yCoord <= 8)
                        {
                            MoveCursorDown();
                        }
                        break;

                    case ConsoleKey.RightArrow:
                        if (xCoord <= 8)
                        {
                            MoveCursorRight();
                        }
                        break;

                    case ConsoleKey.Spacebar:
                        ToggleStar();
                        break;
                }
            }
        }
    }
}
