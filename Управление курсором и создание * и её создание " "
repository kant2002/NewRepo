using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Threading;
using ConsoleApp1;

namespace ConsoleApp1
{
    class Program
    {
        static int xCoord = 0;
        static int yCoord = 0;
        static int[] stars = new int[100];
        static void MoveCursorDown()
        {
            Console.SetCursorPosition(xCoord, ++yCoord);
        }
        static void MoveCursorUp()
        {
            Console.SetCursorPosition(xCoord, --yCoord);
        }
        static void MoveCursorRight()
        {
            Console.SetCursorPosition(++xCoord, yCoord);
        }
        static void MoveCursorLeft()
        {
            Console.SetCursorPosition(--xCoord, yCoord);
        }
        static void ToggleStar()
        {
            if (IsStarCorrespondsToLine() && IsStarDisplayed(xCoord, yCoord))
                {
                    Console.Write("*");
                    Console.SetCursorPosition(xCoord, yCoord);
                    stars[10 * xCoord + yCoord] = 1;
                }
                else
                {
                    Console.Write(" ");
                    Console.SetCursorPosition(xCoord, yCoord);
                    stars[10 * xCoord + yCoord] = 0;
                }
        }
        static bool IsStarCorrespondsToLine()
        {
            var star = 0;
            if (xCoord <= 8 && yCoord <= 8)
            {
                if(IsStarDisplayed(xCoord + 1, yCoord + 1))
                {
                }
                else
                {
                    ++star;
                }
            }
            if (xCoord > 0 && yCoord <= 8)
            {
                if(IsStarDisplayed(xCoord - 1, yCoord + 1))
                {
                }
                else
                {
                    ++star;
                }
            }
            if (xCoord > 0 && yCoord > 0)
            {
                if(IsStarDisplayed(xCoord - 1, yCoord - 1))
                {
                }
                else
                {
                    ++star;
                }
            }
            if (xCoord < 9 && yCoord > 0)
            {
                if (IsStarDisplayed(xCoord + 1, yCoord - 1))
                {
                }
                else
                {
                    ++star;
                }
            }
            if(star == 0)
            {
                return true;
            }
            return false;
        }
        static bool IsStarDisplayed(int xCoord, int yCoord)
        {
            var currentStarCoord = stars[10 * xCoord + yCoord];
            if (currentStarCoord == 0)
            {
                return true;
            }
            return false;
        }
        static void Main(string[] args)
        {
            for (int i = 0; i >= 0; i++)
            {
                var nextChar = Console.ReadKey(true);
                switch (nextChar.Key)
                {
                    case ConsoleKey.UpArrow:
                        if (yCoord > 0)
                        {
                            MoveCursorUp();
                        }
                        break;

                    case ConsoleKey.LeftArrow:
                        if (xCoord > 0)
                        {
                            MoveCursorLeft();
                        }
                        break;

                    case ConsoleKey.DownArrow:
                        if (yCoord <= 8)
                        {
                            MoveCursorDown();
                        }
                        break;

                    case ConsoleKey.RightArrow:
                        if (xCoord <= 8)
                        {
                            MoveCursorRight();
                        }
                        break;

                    case ConsoleKey.Spacebar:
                        ToggleStar();
                        break;
                }
            }
        }
    }
}
