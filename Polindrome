using System;
using System.Xml.Schema;

namespace Polindrom_of_Numbers
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите четырёхзначное число:");
            var addNumb = Convert.ToInt32(Console.ReadLine());
            var convertToString = addNumb.ToString();
            char[] numbers = new char[4];

            for (int i = 0; i <= convertToString.Length - 1; i++)
            {
                numbers[i] = convertToString[i];
            }
            int k = 0;
            char[] numbersReverse = new char[4];
            for( int j = convertToString.Length - 1; j >=0; j--)
            {
                numbersReverse[k] = numbers[j];
                k++;
            }

            for (int l = 0; l <= numbers.Length - 1; l++)
            {
                if (numbers.Length - 1 == l && numbers[l] == numbersReverse[l])
                {
                    Console.WriteLine("Числа палиндромны");
                }
                if (numbers.Length - 1 == l && numbers[l] != numbersReverse[l])
                {
                    Console.WriteLine("Числа не палиндромны");
                }
            }
        }
    }
}
